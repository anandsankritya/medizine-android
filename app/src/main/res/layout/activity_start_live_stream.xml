<?xml version="1.0" encoding="utf-8"?>
<com.medizine.widgets.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutStartMeeting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btnStartMeeting"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/redLight2"
            android:drawableStart="@drawable/ic_videocam"
            android:drawablePadding="20dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="@string/start_a_meeting"
            android:textColor="@color/white" />

    </LinearLayout>

</com.medizine.widgets.StateLayout>